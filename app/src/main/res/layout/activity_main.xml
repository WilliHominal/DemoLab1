<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tituloLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_label"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <EditText
        android:id="@+id/tituloInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/titulo_hint"
        android:importantForAutofill="no"
        android:textSize="@dimen/tamano_input"/>

    <TextView
        android:id="@+id/descripcionLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descripcion_label"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <EditText
        android:id="@+id/descripcionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="@string/descripcion_hint"
        android:lines="3"
        android:importantForAutofill="no"
        android:textSize="@dimen/tamano_input"/>

    <TextView
        android:id="@+id/correoLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/correo_label"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <EditText
        android:id="@+id/correoInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/correo_hint"
        android:autofillHints="emailAddress"
        android:textSize="@dimen/tamano_input"/>

    <TextView
        android:id="@+id/precioLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/precio_label"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simboloPrecioLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precio_simbolo_label"
            android:textSize="@dimen/tamano_input"
            android:paddingStart="@dimen/espaciado_labels"
            android:paddingEnd="@dimen/espaciado_labels"/>

        <EditText
            android:id="@+id/precioInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/precio_hint"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textSize="@dimen/tamano_input"/>
    </LinearLayout>

    <TextView
        android:id="@+id/categoriaLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/categoria_label"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <Spinner
        android:id="@+id/categoriaSpinner"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:dropDownWidth="match_parent"
        android:popupBackground="@color/light_green_claro"
        android:background = "@drawable/spinner_fondo"
        android:textSize="@dimen/tamano_input"/>

    <Switch
        android:id="@+id/descuentoEnvioSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descuentoEnvio_texto"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <LinearLayout
        android:id="@+id/descuentoEnvioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/minDescuentoLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_seekbar"
            android:layout_weight="0"
            android:text="@string/minDescuento_seekbar_texto"
            android:textSize="@dimen/tamano_input"/>

        <SeekBar
            android:id="@+id/descuentoEnvioSeekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/maxDescuentoLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/espaciado_seekbar"
            android:layout_weight="0"
            android:text="@string/maxDescuento_seekbar_texto"
            android:textSize="@dimen/tamano_input"/>

    </LinearLayout>

    <TextView
        android:id="@+id/descuentoActualLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descuentoActual_label"
        android:visibility="gone"
        android:gravity="center"/>

    <CheckBox
        android:id="@+id/retiroEnPersonaCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retiroEnPersona_texto"
        android:textSize="@dimen/tamano_label"/>

    <TextView
        android:id="@+id/direccionRetiroLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/direccionRetiro_label"
        android:visibility="gone"
        android:textSize="@dimen/tamano_label"
        android:paddingStart="@dimen/espaciado_labels"
        android:paddingEnd="@dimen/espaciado_labels"/>

    <EditText
        android:id="@+id/direccionRetiroInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/direccionRetiro_hint"
        android:importantForAutofill="no"
        android:visibility="gone"
        android:textSize="@dimen/tamano_input"/>

    <CheckBox
        android:id="@+id/terminosCondicionesCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terminosCondiciones_texto"
        android:textSize="@dimen/tamano_label"/>

    <Button
        android:id="@+id/publicarBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publicarBtn_texto"
        android:enabled="false"
        android:background="@drawable/boton_publicar"
        android:textSize="@dimen/tamano_label"/>
</LinearLayout>